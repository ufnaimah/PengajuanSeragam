<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.polstat.seragam.mobile"> <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SeragamSTISMobile"
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true"
            android:label="Login - Seragam STIS">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.home.HomeActivity"
            android:exported="false"
            android:label="Daftar Pengajuan" />

        <activity
            android:name=".ui.pengajuan.PengajuanActivity"
            android:exported="false"
            android:label="Buat Pengajuan Baru" />

        <activity
            android:name=".MainActivity"
            android:exported="false" />

    </application>

</manifest>